{
  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],

  "plugins": ["prettier", "promise"],

  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "import/prefer-default-export": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "strict": 0
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
